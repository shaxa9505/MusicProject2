doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/') Music extion
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            if isIndex
              li.nav-item
                a.nav-link.active(href='/') Bosh sahifa
            else 
              li.nav-item
                a.nav-link(href='/') Bosh sahifa
            if user
              if isMusicAdd
                li.nav-item
                  a.nav-link.active(href='/music/add') Musiqa qo'shish
              else 
                li.nav-item
                  a.nav-link(href='/music/add') Musiqa qo'shish
          ul.navbar-nav.me-right.mb-2.mb-lg-0
           if user 
              p(class="white")= user.name
              li.nav-item
                a.nav-link(href='/logout') Chiqish
           else
            if isUser
              li.nav-item
                a.nav-link.active(href='/user') Ro'yhatdan utish
            else 
              li.nav-item
                a.nav-link(href='/user') Ro'yhatdan utish
            if isLogin
              li.nav-item
                a.nav-link.active(href='/login') Kirish
            else 
              li.nav-item
                a.nav-link(href='/login') Kirish
    .container           
      != messages('message', locals)
      if errors 
        each error, i in errors
          p(class="alert alert-danger mt-4") #{error.msg}
      block content
      footer 
      p Barcha xizmatlar litsenziyalangan &copy; 2022